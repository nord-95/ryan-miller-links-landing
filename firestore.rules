rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Newsletter emails collection
    match /newsletter_emails/{emailId} {
      // Allow anyone to create (write) new email entries
      allow create: if request.resource.data.keys().hasAll(['email', 'timestamp', 'source'])
                   && request.resource.data.email is string
                   && request.resource.data.email.matches('.*@.*\\..*') // Basic email validation
                   && request.resource.data.source is string;
      
      // Deny updates and deletes (emails should not be modified or deleted)
      allow update: if false;
      allow delete: if false;
      
      // Only allow reads if authenticated (optional - remove if you want to allow public reads)
      // For now, we'll allow reads so you can view in Firebase Console
      allow read: if true;
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

